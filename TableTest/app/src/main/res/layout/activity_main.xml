<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.evrencoskun.tableview.TableView
        android:id="@+id/table_view_athletes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:show_horizontal_separator="false"
        app:show_vertical_separator="false"
        app:allow_click_inside_column_header="true"
        app:allow_click_inside_row_header="true"
        app:allow_click_inside_cell="true"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn"
        android:text="Remove Rows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/table_view_athletes"
        app:layout_constraintLeft_toLeftOf="@id/table_view_athletes"
        app:layout_constraintRight_toRightOf="@id/table_view_athletes"/>

    <Button
        android:id="@+id/btn_c"
        android:text="Remove Column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn"
        app:layout_constraintLeft_toLeftOf="@id/table_view_athletes"
        app:layout_constraintRight_toRightOf="@id/table_view_athletes"/>

    <Button
        android:id="@+id/btn_a"
        android:text="Add Column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_c"
        app:layout_constraintLeft_toLeftOf="@id/table_view_athletes"
        app:layout_constraintRight_toRightOf="@id/table_view_athletes"/>

    <Button
        android:id="@+id/compare"
        android:text="Compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_a"
        app:layout_constraintLeft_toLeftOf="@id/table_view_athletes"
        app:layout_constraintRight_toRightOf="@id/table_view_athletes"/>

</androidx.constraintlayout.widget.ConstraintLayout>